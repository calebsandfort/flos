FROM python:3.11-slim

WORKDIR /app

# Install uv
RUN pip install uv

# Copy requirements from api (using api requirements for now as common ones are there)
# Ideally worker should have its own requirements.txt
COPY api/requirements.txt .

# Install dependencies using uv
RUN uv pip install --system -r requirements.txt

# Copy source code
COPY common ./common
COPY worker ./worker

# Entrypoint command
CMD ["python", "worker/worker_job.py"]
